<resources>

    <!-- Application Theme -->
    <style name="Theme.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/orange_500</item>

        <item name="android:actionModeBackground">@color/blue_700</item>
        <item name="android:windowBackground">@color/grey_50</item>

        <!-- Toolbar -->
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="drawerArrowStyle">@style/Toolbar.DrawerToggle</item>
        <item name="actionOverflowButtonStyle">@style/Toolbar.OverflowMenuButton</item>

        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:editTextStyle">@style/EditText</item>

        <item name="android:activatedBackgroundIndicator">@drawable/activated_background_indicator</item>
    </style>

    <!-- Application Theme -->
    <style name="Theme.AppTheme.NoActionBar" parent="Theme.AppTheme">
        <!-- The drawer needs to set the status bar color manually -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/transparent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- Styles -->
    <style name="Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/Toolbar.Title</item>
        <item name="android:background">@color/blue_500</item>
    </style>

    <style name="Toolbar.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Toolbar.DrawerToggle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="Toolbar.OverflowMenuButton" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/overflowmenu</item>
    </style>

    <style name="Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="EditText" parent="@style/Widget.AppCompat.EditText">
        <!-- Avoid the keyboard going fullscreen (hiding the application) when in landscape mode -->
        <item name="android:imeOptions">flagNoExtractUi|flagNoFullscreen</item>
    </style>

    <!-- Material Design Colors -->
    <color name="transparent">#00000000</color>
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>
    <color name="grey_50">#F5F5F5</color>
    <color name="grey_200">#EEEEEE</color>
    <color name="grey_500">#757575</color>
    <color name="blue_500">#5677FC</color>
    <color name="blue_700">#455EDE</color>
    <color name="blue_900">#1A237E</color>
    <color name="orange_500">#FF9800</color>
</resources>
